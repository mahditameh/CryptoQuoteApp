@using Applications.DTO
@using CryptoQuoteApp.Helpers
@model CryptoQuoteDto

@{
    ViewData["Title"] = "Crypto Quotes for " + Model.Symbol;
}

<h1>Quotes for <strong>@Model.Symbol</strong></h1>

<table class="table">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Rate</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ConvertedPrices != null)
        {
            foreach (var rate in Model.ConvertedPrices)
            {
                <tr>
                    <td>@rate.Key</td>
                    <td>@CurrencyHelper.FormatCurrency(rate.Key, rate.Value)</td> <!-- Format currency here -->
                </tr>
            }
        }
    </tbody>
</table>

<a href="@Url.Action("Index")">Back</a>